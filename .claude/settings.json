{
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Bash(rm -rf:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(sudo:*)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git push --force:*)",
      "Bash(npm publish:*)",
      "Bash(pnpm publish:*)",
      "Bash(npm run deploy:*)",
      "Bash(pnpm run deploy:*)"
    ],
    "allow": [
      "Read(./**)",
      "Write(./**)",
      "Edit(./**)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(npm test:*)",
      "Bash(npm run:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm run:*)",
      "Bash(npx:*)",
      "Bash(pnpx:*)",
      "Bash(tsc:*)",
      "Bash(eslint:*)",
      "Bash(prettier:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm run format --write . 2>/dev/null || npm run format --write . 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
